generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username String @unique
  password String
  userId   String @id @default(uuid()) // Primary key
  tasks    Task[]
}

model Task {
  taskId      String @unique @default(uuid())
  title       String
  description String
  userId      String // foreign keu field
  user        User   @relation(fields: [userId], references: [userId])
}
